{
  "name": "<%= moduleName %>",
  "version": "0.0.0",
  "description": "My <%= superb %> module",
  "license": "MIT",
  "repository": "<%= githubUsername %>/<%= moduleName %>",
  "author": {
    "name": "<%= name %>",
    "email": "<%= email %>",
    "url": "<%= humanizedWebsite %>"
  },<% if (cli) { %>
  "bin": "cli.js",<% } %>
  "engines": {
    "node": ">=0.10.0"
  },
  "scripts": {
    "test": "npm run cover && npm run lint && npm run style",
    "cover": "istanbul cover ./node_modules/.bin/_mocha",
    "lint": "jshint *.js lib/*.js lib/**/*.js test/*.js test/**/*.js",
    "debug": "mocha",
    "style": "jscs ./**/*.js && jscs ./test/** --config=./test/.jscsrc"
  },
  "files": [
    "index.js"<% if (cli) { %>,
    "cli.js"<% } %>
  ],
  "keywords": [<% if (cli) { %>
    "cli-app",
    "cli",<% } %>
    ""
  ],
  "dependencies": {<% if (cli) { %>
    "meow": "^3.3.0"
  <% } %>},
  "devDependencies": {
    "codeclimate-test-reporter": "^0.1.0",
    "coveralls": "^2.11.2",
    "jscs": "^1.13.1",
    "jshint": "^2.8.0",
    "mocha": "^2.2.5"
  }
}
